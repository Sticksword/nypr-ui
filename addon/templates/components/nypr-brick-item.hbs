{{#if hasBlock}}
  {{yield}}
{{else}}
{{#with item.attributes as |item|}}
  <div class="item__icons">
    <div class="item__icons__video">
      {{nypr-svg className="icon" icon="video"}}
    </div>
  </div>
  {{#if vertical}}
    <div class="item__img {{ item.attributes.template }}"
         style={{backgroundImage}}>
    </div>
  {{/if}}
  <div class="item__head">
    <a
      class="item__head__brand gtm__click-tracking"
      title={{or items.showTitle item.headers.brand.title}}
      data-action={{data-action}}
      data-label={{or item.showTitle item.headers.brand.title}}
      href={{item.headers.brand.url}}>
      {{or item.showTitle item.headers.brand.title}}
    </a>
    <h2 class="item__head__headline">
      {{#link-to
        'story'
        item.slug
        class="gtm__click-tracking"
        data-category=data-category
        data-action=data-action
        data-label=(concat item.title " | " (or item.showTitle item.headers.brand.title))}}
        {{nypr-svg className="icon" icon="video"}}
        {{or item.shortTitle item.title}}
      {{/link-to}}
    </h2>
    {{#if item.audio}}
      {{#listen-button
        type='blue-minion'
        itemPK=item.slug
        itemTitle=(or item.shortTitle item.title)
        itemShow=(or item.showTitle item.headers.brand.title)}}
        Listen {{item.audioDurationReadable}}
      {{/listen-button}}
    {{/if}}
  </div>
  {{#link-to
    'story'
    item.slug
    class="item__link--hidden gtm__click-tracking"
    data-category=data-category
    data-action=data-action
    data-label=(concat item.title " | " (or item.showTitle item.headers.brand.title))}}
    {{or item.shortTitle item.title}}
  {{/link-to}}
{{/with}}
{{/if}}
