<aside id="series" data-category="series">
  <h1 class="h4 h--flush outlineonly">Also Seen In...</h1>
  <div class="list">
    {{#each series as |item|}}
    <article class="list-item">
      <div class="flag flush">
        {{#if item.image}}
        <div class="flag-image">
          <img alt="{{item.title}}" class="squarebadge badge--large" 
            src="{{image-template item.image.template 100 100 item.image.crop 99}}"
            srcset="{{image-template item.image.template 200 200 item.image.crop 99}} 2x,
              {{image-template item.image.template 300 300 item.image.crop 99}} 3x"
            width="100" height="100">
        </div>
        {{/if}}
        <div class="flag-body">
          <div class="l-split flush">
            <div class="text text--medium text--gray flush--medium">
              <div class="text-body--rightpad text-body--forceinline">
                Part of <a href="/series/{{item.slug}}">{{{item.title}}}</a>. <span class="medium-up">{{{item.tease}}}</span>
              </div>
            </div>
            <a href="/series/{{item.slug}}" class="btn">More in this Series</a>
          </div>
          <!-- .l-split -->
        </div>
      </div>
      <!-- .flag -->
    </article>
    <!-- .list-item -->
    {{/each}}
  </div>
  <!-- .list -->
</aside>
