<div class="stream-banner-card"
     style="background-image:url({{background}})">
  <div>
    {{#if (or streams.isFulfilled activeStream)}}
      {{yield activeStream (hash
        header=(component 'stream-banner/station' activeStream=activeStream streams=streams)
        details=(component 'stream-banner/details' activeStream=activeStream)
        controls=(component 'stream-banner/controls' audio=audio activeStream=activeStream)
      )}}
    {{else}}
    Loading...
    {{/if}}
  </div>
</div>
