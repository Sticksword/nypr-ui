<div class="nypr-card-header">
  <span class="nypr-card-title">{{title}}</span>
  
  {{#if edit}}
  <button class="nypr-card-edit-btn" {{action (action edit)}} data-test-selector="edit-button">
    Edit info
  </button>
  {{else if toggle}}
  <button class="nypr-card-edit-btn" {{action 'toggle'}} data-test-selector="edit-button">
    {{if toggled 'Cancel' 'Edit info'}}
  </button>
  {{/if}}
</div> 

{{yield}}
