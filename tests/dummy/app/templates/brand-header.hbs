{{#nypr-ui/brand-header as |brands|}}
  {{#brands.header as |header|}}
    {{#header.left as |left|}}
      <div style="display: flex; align-items: center; justify-content: center; margin-right: 15px;">
        <a href="/donate" style="color: white;">donate</a>
      </div>
      {{left.logos}}
    {{/header.left}}

    {{#header.right as |right|}}
      {{right.button}}
    {{/header.right}}
  {{/brands.header}}
