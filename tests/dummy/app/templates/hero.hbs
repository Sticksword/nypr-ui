{{#nypr-ui/hero gradient=true sticky=true as |hero|}}
  {{#hero.top as |top|}}
    {{#top.left}}
      {{nypr-svg icon="left-arrow" className="hero-back"}}
      {{nypr-svg icon="wnyc-logo" className="hero-logo"}}
    {{/top.left}}
    
    {{#top.right}}
      {{#nypr-ui/buttons/red tagName="a" href="http://www.wnyc.org" tall=true}}
        Donate
      {{/nypr-ui/buttons/red}}
    {{/top.right}}
  {{/hero.top}}
  
  {{hero.image src="https://dummyimage.com/1200" credit="the credit"}}
  
  {{#hero.headline}}
    unsettled in america
  {{/hero.headline}}
  
  {{#hero.blurb}}
    <p>
      blah blah blah
    </p>
    
    <button>listen</button>
  {{/hero.blurb}}
  
  {{#hero.footer as |footer|}}
    {{#footer.lockup}}
      social buttons
    {{/footer.lockup}}
  {{/hero.footer}}
{{/nypr-ui/hero}}
